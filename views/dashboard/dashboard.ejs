<div class="page-wrapper">
  <div class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="page-header">
          <div class="row align-items-center">
            <div class="col-md-4">
              <h3 class="page-title">Dashboard</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xl-3 col-lg-6">
        <div class="campaign-box bg-danger-light">
          <div class="campaign-img"> <span> <i class="ti ti-users"></i> </span>
            <p>Users</p>
          </div>
          <h2>1</h2>
        </div>
      </div>
      <div class="col-xl-3 col-lg-6">
        <div class="campaign-box bg-warning-light">
          <div class="campaign-img"> <span> <i class="ti ti-database"></i> </span>
            <p>Facility Masters</p>
          </div>
          <h2><%= facility_count %></h2>
        </div>
      </div>
      <div class="col-xl-3 col-lg-6">
        <div class="campaign-box bg-purple-light">
          <div class="campaign-img"> <span> <i class="ti ti-layout-dashboard"></i> </span>
            <p>Supplier</p>
          </div>
          <h2><%= supplier_count %></h2>
        </div>
      </div>
      <div class="col-xl-3 col-lg-6">
        <div class="campaign-box bg-success-light">
          <div class="campaign-img"> <span> <i class="ti ti-brand-pocket"></i> </span>
            <p>ASN</p>
          </div>
          <h2>0</h2>
        </div>
      </div>
    </div>
    <div class="row">
	    <div class="col-md-6 d-flex">
          <div class="card flex-fill">
            <div class="card-header border-0 pb-0">
              <div class="d-flex align-items-center justify-content-between flex-wrap row-gap-3">
                <h4><i class="ti ti-grip-vertical me-1"></i>Recently Created Facility Masters</h4>
                <% if(facility_data && facility_data.length > 0) { %>
                <a href="/facility" class="btn btn-light">View All</a>
                <% } %>
              </div>
            </div>
            <div class="card-body"> 
              <% if(facility_data && facility_data.length > 0) { %>
              <div class="table-responsive custom-table">
                <table class="table">
                  <thead class="thead-light">
                    <tr>
                      <th>S.No.</th>
                      <th>Date</th>
                      <th>Facility Name</th>
                      <th>Facility Id</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% facility_data.forEach(function(facility, idx) { %>
                  <% 
                    const btnColor = (facility.status === 'active') ? 'success' : (facility.status === 'pending') ? 'secondary' : (facility.status === 'inactive') ? 'danger' : 'info';
                    let count = idx + 1;
                  %>                    
                    <tr>
                      <td><%= count %></td>
                      <td><%= facility.created_at %></td>
                      <td><%= facility.name %></td>
                      <td><%= facility.id %></td>
                      <!-- <td><span class="badge badge-pill badge-status bg-<%= btnColor %>"><%= facility.status %></span></td> -->
                    </tr>
                  <% }) %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
                <div class="noDataFound d-flex align-items-center justify-content-center flex-column" style="height:100%;">
                  <strong>No Data Found </strong>
                  <div class="mb-3 mt-4">
                    <a href="/facility" class="btn btn-primary w-100">Add Facility</a>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
      </div>
      <div class="col-md-6 d-flex">    
        <div class="card flex-fill">
          <div class="card-header border-0 pb-0">
            <div class="d-flex align-items-center justify-content-between flex-wrap row-gap-3">
              <h4><i class="ti ti-grip-vertical me-1"></i>Recently Created Supplier</h4>
              <% if(supplier_data && supplier_data.length > 0) { %>
                <a href="/supplier" class="btn btn-light">View All</a>
              <% } %>
            </div>
          </div>
          <div class="card-body"> 
            <% if(supplier_data && supplier_data.length > 0) { %>
            <div class="table-responsive custom-table">
              <table class="table">
                <thead class="thead-light">
                  <tr>
                    <th>S.No.</th>
                    <th>Date</th>
                    <th>Supplier Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Facility Master</th>
                  </tr>
                </thead>
                <tbody>
                  <% supplier_data.forEach(function(supplier, idx) { %>
                    <% 
                      const btnColor = (supplier.status === 'active') ? 'success' : (supplier.status === 'pending') ? 'secondary' : (supplier.status === 'inactive') ? 'danger' : 'info';
                      let count = idx + 1;
                    %>                    
                      <tr>
                        <td><%= count %></td>
                        <td><%= supplier.created_at %></td>
                        <td><%= supplier.name %></td>
                        <td><%= supplier.email %></td>
                        <td><%= supplier.mobile %></td>
                        <td><%= supplier.facility %></td>
                      </tr>
                    <% }) %>
                </tbody>
              </table>
            </div>
            <% } else { %>    
              <div class="noDataFound d-flex align-items-center justify-content-center flex-column" style="height:100%;">
                <strong>No Data Found </strong>
                <div class="mb-3 mt-4">
                  <a href="/supplier/add" class="btn btn-primary w-100">Add Supplier</a>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
